@using Microsoft.AspNetCore.Identity
@using BookStore.WebUI.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<h1>Account</h1>
<div class="row" style="height: 100vh;">
    <div class="col-md-3">
        <p>
            IsAuthenticated : @ViewBag.IsAuthenticated
        </p>
        <p>
            Email : @ViewBag.Name
        </p>

        @if (SignInManager.IsSignedIn(User))
        {
            <form asp-area="Identity" asp-page="/Account/Manage/Index">
                    <button id="manage-button" type="submit" class="w-100 btn btn-lg btn-primary mb-3">Manage</button>
            </form>
        }

        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout-button" type="submit" class="w-100 btn btn-lg btn-primary">Log out</button>
        </form>
        
    </div>
</div>

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
    </li>
}